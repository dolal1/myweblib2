<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
          <h2 class="text-center mb-3">Search Authors</h2>
            <form action="/authors" method="GET">
                <div class="form-group">
                    <label>Name</label>
                    <input 
                        type="text" 
                        name="name"
                        class="form-control"
                        value="<%= searchOptions.name %>"
                    />
                    <Button type="submit" class="btn btn-primary">Search</Button>
                </div>
            </form>
        </div>
        <br>
        <% authors.forEach(author => { %> 
            <div><%= author.name %> </div>
            <a class="btn btn-primary" href="/authors/<%= author.id %>">View</a>
            <a class="btn btn-primary" href="/authors/<%= author.id %>/edit">Edit</a>
            <%- include('../partials/deleteForm.ejs',
                            { url: `/authors/${author.id}` }) %>
        <% }) %>
    </div>
</div>